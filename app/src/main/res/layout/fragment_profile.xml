<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    <!--
    <Button
        android:id="@+id/profile_fragment_profile"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/darker_gray"
        android:text=""
        android:textSize="20sp" />
    -->

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="20sp"
        android:layout_centerHorizontal="true"

        android:text="NAME"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/profile_idnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginLeft="18sp"
        android:layout_centerHorizontal="true"


        android:text="ID NUMBER"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/profile_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_idnum"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="30sp"
        android:layout_centerHorizontal="true"


        android:text="MAJOR"
        android:textSize="18sp" />



    <Button
        android:id="@+id/profile_fragment_groupjoined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_major"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"

        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/darker_gray"
        android:text="Groups Joined"
        android:textSize="20sp"/>


</RelativeLayout>