    <TextView
        android:id="@+id/return_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Returning User"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/return_user_IDNum"
        android:layout_width="match_parent"
        android:layout_height="60sp"

        android:layout_marginTop="100sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/return_user_title"

        android:ems="10"
        android:hint="ID Number"
        android:inputType="text|number"/>

    <EditText
        android:id="@+id/return_user_Password"
        android:layout_width="match_parent"
        android:layout_height="60sp"

        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/return_user_IDNum"

        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/return_user_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/return_user_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"

        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/darker_gray"
        android:text="Sign In"
        android:textSize="20sp"/>

</RelativeLayout>