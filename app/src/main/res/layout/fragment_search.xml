<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light">

    <TextView
        android:id="@+id/text_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/search_fragment_searchinput"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Search here..."
        android:autofillHints="Search"
        android:inputType="text"/>

    <Button
        android:id="@+id/search_fragment_searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fragment_searchinput"
        android:layout_centerHorizontal="true"

        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/darker_gray"
        android:text="Search"
        android:textSize="20sp"/>

    <ScrollView
        android:id="@+id/search_fragment_searchlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_fragment_searchbutton">

        <LinearLayout
            android:id="@+id/search_fragment_searchlistlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4sp"
            android:layout_centerHorizontal="true" />

    </ScrollView>


</RelativeLayout>

